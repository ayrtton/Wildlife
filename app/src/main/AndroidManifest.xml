<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wildlife">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".WildlifeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Wildlife">
        <activity
            android:name="com.example.wildlife.presentation.userInterface.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.userInterface.AnimalsStorageActivity"
            android:label="Stored Animals"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.wildlife.presentation.userInterface.AnimalDetailsActivity"
            android:label="Animal Details"
            android:screenOrientation="portrait" />
    </application>

</manifest>